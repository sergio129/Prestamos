{
  "name": "prestamos-app",
  "version": "1.0.0",
  "description": "Aplicación móvil para simulación de préstamos",
  "main": "index.js",
  "scripts": {
    "start": "npm run copy-web && npm run serve-app",
    "serve-app": "npx serve www",
    "build": "npm run copy-web && npx cap sync",
    "copy-web": "node scripts/copy-web.js",
    "init-android": "npx cap add android",
    "init-ios": "npx cap add ios",
    "open-android": "npx cap open android",
    "open-ios": "npx cap open ios",
    "sync": "npx cap sync"
  },
  "keywords": [
    "préstamos",
    "simulador",
    "finanzas",
    "app"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/network": "^5.0.0",
    "@capacitor/local-notifications": "^5.0.0",
    "serve": "^14.0.0"
  }
}
